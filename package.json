{
  "name": "topsmile-frontend",
  "version": "1.0.0",
  "description": "TopSmile Dental Clinic Management System - Frontend Application",
  "author": "TopSmile Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/topsmile/topsmile"
  },
  "keywords": [
    "dental",
    "clinic",
    "management",
    "healthcare",
    "react",
    "typescript",
    "patient-portal"
  ],
  "private": true,
  "dependencies": {
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^2.1.0",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-query-devtools": "^5.89.0",
    "@topsmile/types": "file:packages/types",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "framer-motion": "^10.16.5",
    "luxon": "^3.7.1",
    "react": "^18.2.0",
    "react-calendar": "^6.0.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "react-slick": "^0.29.0",
    "slick-carousel": "^1.8.1",
    "typescript": "^4.9.5",
    "web-vitals": "^3.5.0",
    "zustand": "^4.5.7"
  },
  "scripts": {
    "postinstall": "cd backend && npm install",
    "start": "react-scripts start",
    "dev": "concurrently \"npm run server\" \"npm run start\"",
    "dev:frontend": "react-scripts start",
    "dev:backend": "cd backend && npm run dev",
    "server": "cd backend && npm run dev",
    "build": "cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "build:all": "npm run build && cd backend && npm run build",
    "eject": "react-scripts eject",
    "test": "npm run test:all",
    "test:all": "npm run test:frontend && npm run test:backend",
    "test:frontend": "jest --config jest.config.js --runInBand",
    "test:frontend:watch": "jest --config jest.config.js --watch",
    "test:frontend:coverage": "jest --config jest.config.js --coverage",
    "test:frontend:ci": "jest --config jest.config.js --ci --coverage --maxWorkers=2",
    "test:backend": "cd backend && npm test",
    "test:backend:watch": "cd backend && npm run test:watch",
    "test:backend:coverage": "cd backend && npm run test:coverage",
    "test:backend:ci": "cd backend && npm run test:ci",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:coverage": "npm run test:frontend:coverage && npm run test:backend:coverage",
    "test:ci": "npm run test:frontend:ci && npm run test:backend:ci && npm run test:e2e",
    "test:a11y": "jest --testPathPattern=accessibility",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "lighthouse:ci": "lhci autorun",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js'",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "build:analyze": "cross-env GENERATE_SOURCEMAP=true npm run build && npm run analyze",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "audit:a11y": "npm run test:a11y && npm run lighthouse",
    "migrate-types": "node scripts/migrate-types.js",
    "fix-type-imports": "node scripts/fix-type-imports.js",
    "generate-secrets": "node scripts/generate-secrets.js",
    "generate-env-secrets": "node scripts/generate-env-secrets.js",
    "perf:load": "k6 run backend/tests/performance/load-test.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/bonjour": "^3.5.13",
    "@types/dompurify": "^3.2.0",
    "@types/estree": "^1.0.8",
    "@types/history": "^4.7.11",
    "@types/jest": "^27.5.2",
    "@types/jest-axe": "^3.5.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.6.0",
    "@types/prettier": "^2.7.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-slick": "^0.23.13",
    "@types/sinonjs__fake-timers": "^8.1.5",
    "@types/sizzle": "^2.3.10",
    "@types/trusted-types": "^2.0.7",
    "broadcast-channel": "^7.1.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "cypress": "^15.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-axe": "^10.0.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^1.1.0",
    "mongodb-memory-server": "^10.2.0",
    "msw": "^2.11.2",
    "node-fetch": "^3.3.2",
    "source-map-explorer": "^2.5.3",
    "supertest": "^7.1.4",
    "text-encoding": "^0.7.0",
    "ts-jest": "^27.1.4",
    "web-streams-polyfill": "^4.2.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "whatwg-fetch": "^3.6.20"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
