{
  "name": "topsmile-backend",
  "version": "1.0.0",
  "description": "TopSmile Dental Clinic Management System - Backend API",
  "main": "dist/app.js",
  "author": "TopSmile Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/topsmile/topsmile"
  },
  "keywords": [
    "dental",
    "clinic",
    "management",
    "healthcare",
    "appointments",
    "patients",
    "typescript",
    "express",
    "mongodb"
  ],
  "scripts": {
    "dev": "nodemon --watch src --exec \"ts-node -r tsconfig-paths/register\" src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest --config jest.config.js",
    "test:serial": "jest --config jest.config.js --runInBand",
    "test:watch": "jest --watch --verbose --maxWorkers=2",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.ts' --coveragePathIgnorePatterns='/node_modules/'",
    "test:unit": "jest --testPathPattern=tests/unit --maxWorkers=4",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:security": "jest --testPathPattern=tests/security --runInBand",
    "test:performance": "jest --testPathPattern=tests/performance --runInBand",
    "test:edge-cases": "jest --testPathPattern=tests/edge-cases --runInBand",
    "test:compliance": "jest --testPathPattern=tests/compliance --runInBand",
    "test:payments": "jest --testPathPattern=tests/payments --runInBand",
    "test:k6": "./scripts/run-k6-tests.sh",
    "test:k6:auth": "./scripts/run-k6-tests.sh auth",
    "test:k6:stress": "./scripts/run-k6-tests.sh stress",
    "test:benchmarks": "jest --testPathPattern=tests/performance --runInBand --verbose",
    "test:parallel": "jest --config jest.parallel.config.js",
    "test:fast": "jest --onlyChanged --passWithNoTests --maxWorkers=4",
    "test:transactions": "jest --testPathPattern=tests/transactions --runInBand",
    "test:fast": "jest --onlyChanged --passWithNoTests",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@topsmile/types": "file:../packages/types",
    "@types/bcrypt": "^6.0.0",
    "@types/date-fns": "^2.6.3",
    "@types/mongoose": "^5.11.97",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.1",
    "mongoose": "^8.18.0",
    "nodemailer": "^6.10.1",
    "pino": "^9.11.0",
    "pino-http": "^10.5.0",
    "redis": "^5.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.19",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "faker-js": "^1.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "k6": "^0.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
