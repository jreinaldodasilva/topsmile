# SERVER CONFIGURATION
# ===========================
NODE_ENV=development
PORT=5000

# ===========================
# DATABASE
# ===========================
DATABASE_URL=mongodb://localhost:27017/topsmile

# ===========================
# AUTHENTICATION
# ===========================
