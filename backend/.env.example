# ===========================
# BACKEND ENVIRONMENT VARIABLES
# ===========================
# Copy to .env and configure for your environment

# ===========================
# SERVER CONFIGURATION
# ===========================
NODE_ENV=development
PORT=5000

# ===========================
# DATABASE
# ===========================
# MongoDB connection string
DATABASE_URL=mongodb://localhost:27017/topsmile
MONGODB_URI=mongodb://localhost:27017/topsmile

# ===========================
# REDIS CACHE
# ===========================
REDIS_URL=redis://localhost:6379

# ===========================
# AUTHENTICATION & SECURITY
# ===========================
# Generate with: openssl rand -hex 32
# CRITICAL: Must be 64+ characters in production
JWT_SECRET=your_jwt_secret_min_64_chars_generate_with_openssl_rand_hex_32
JWT_REFRESH_SECRET=your_refresh_secret_min_64_chars_generate_with_openssl_rand_hex_32
PATIENT_JWT_SECRET=your_patient_jwt_secret_min_64_chars_generate_with_openssl_rand_hex_32

# Token expiration
JWT_EXPIRES_IN=15m
ACCESS_TOKEN_EXPIRES=15m
PATIENT_ACCESS_TOKEN_EXPIRES=24h
REFRESH_TOKEN_EXPIRES_DAYS=7

# Cookie settings
COOKIE_SECURE=false

# ===========================
# CORS & FRONTEND INTEGRATION
# ===========================
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin

# ===========================
# EMAIL CONFIGURATION
# ===========================
FROM_EMAIL=noreply@topsmile.com
ADMIN_EMAIL=contato@topsmile.com

# SendGrid (Production)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Ethereal Email (Development/Testing)
ETHEREAL_USER=your_ethereal_user@ethereal.email
ETHEREAL_PASS=your_ethereal_password

# ===========================
# SMS CONFIGURATION (TWILIO)
# ===========================
# For development (SMS disabled, codes logged to console)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# For production (with valid Twilio credentials)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================
# RATE LIMITING
# ===========================
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=100
CONTACT_RATE_LIMIT_WINDOW_MS=900000
CONTACT_RATE_LIMIT_MAX=5

# ===========================
# LOGGING & MONITORING
# ===========================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
DETAILED_ERRORS=true

# ===========================
# SECURITY SETTINGS
# ===========================
VERIFY_USER_ON_REQUEST=false
TRUST_PROXY=0

# ===========================
# DEVELOPMENT SETTINGS
# ===========================
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false
