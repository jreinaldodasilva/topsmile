# ===========================
# TEST ENVIRONMENT VARIABLES
# ===========================
# Copy to .env.test for testing

NODE_ENV=test

# Test Database
DATABASE_URL=mongodb://localhost:27017/topsmile_test
MONGODB_URI=mongodb://localhost:27017/topsmile_test
TEST_MONGODB_URI=mongodb://localhost:27017/topsmile_test

# Test Redis
REDIS_URL=redis://localhost:6379/1
TEST_REDIS_URL=redis://localhost:6379/1

# Test Authentication Secrets
JWT_SECRET=test_jwt_secret_for_automated_testing_only_min_64_chars_required
JWT_REFRESH_SECRET=test_refresh_secret_for_automated_testing_only_min_64_chars
PATIENT_JWT_SECRET=test_patient_jwt_secret_for_automated_testing_only_min_64
TEST_JWT_SECRET=test_jwt_secret_for_automated_testing_only_min_64_chars_required
TEST_PATIENT_JWT_SECRET=test_patient_jwt_secret_for_automated_testing_only_min_64

# Test User Credentials
TEST_DEFAULT_PASSWORD=SecureTestPass123!
TEST_PATIENT_PASSWORD=SecurePatientPass123!
TEST_ADMIN_PASSWORD=SecureAdminPass123!
TEST_PROVIDER_PASSWORD=SecureProviderPass123!

# Test Configuration
TEST_TIMEOUT=15000
COOKIE_SECURE=false

# Frontend URL for tests
FRONTEND_URL=http://localhost:3000

# Email Configuration (Mock in tests)
MOCK_EMAIL_SERVICE=true
FROM_EMAIL=test@topsmile.com
ADMIN_EMAIL=admin@topsmile.com

# SMS Configuration (Mock in tests)
MOCK_SMS_SERVICE=true

# Logging
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false
DETAILED_ERRORS=true
