# ===========================
# PRODUCTION BACKEND ENVIRONMENT
# ===========================
# CRITICAL: Never commit actual production values

# ===========================
# SERVER CONFIGURATION
# ===========================
NODE_ENV=production
PORT=5000

# ===========================
# DATABASE
# ===========================
# Use MongoDB Atlas or managed MongoDB in production
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/topsmile?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/topsmile?retryWrites=true&w=majority

# ===========================
# REDIS CACHE
# ===========================
# Use managed Redis (AWS ElastiCache, Redis Cloud, etc.)
REDIS_URL=redis://production-redis-host:6379

# ===========================
# AUTHENTICATION & SECURITY
# ===========================
# CRITICAL: Generate strong secrets with: openssl rand -hex 32
# Must be 64+ characters (32 bytes in hex)
JWT_SECRET=REPLACE_WITH_STRONG_64_CHAR_SECRET_FROM_OPENSSL_RAND_HEX_32
JWT_REFRESH_SECRET=REPLACE_WITH_STRONG_64_CHAR_SECRET_FROM_OPENSSL_RAND_HEX_32
PATIENT_JWT_SECRET=REPLACE_WITH_STRONG_64_CHAR_SECRET_FROM_OPENSSL_RAND_HEX_32

# Token expiration
JWT_EXPIRES_IN=15m
PATIENT_ACCESS_TOKEN_EXPIRES=24h
REFRESH_TOKEN_EXPIRES_DAYS=7

# Cookie settings (MUST be true in production)
COOKIE_SECURE=true

# ===========================
# CORS & FRONTEND INTEGRATION
# ===========================
FRONTEND_URL=https://topsmile.com
ADMIN_URL=https://admin.topsmile.com

# ===========================
# EMAIL CONFIGURATION
# ===========================
FROM_EMAIL=noreply@topsmile.com
ADMIN_EMAIL=contato@topsmile.com

# SendGrid Production API Key
SENDGRID_API_KEY=SG.REPLACE_WITH_PRODUCTION_SENDGRID_API_KEY

# ===========================
# SMS CONFIGURATION (TWILIO)
# ===========================
TWILIO_ACCOUNT_SID=REPLACE_WITH_PRODUCTION_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=REPLACE_WITH_PRODUCTION_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+5511999999999

# ===========================
# RATE LIMITING
# ===========================
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=100
CONTACT_RATE_LIMIT_WINDOW_MS=900000
CONTACT_RATE_LIMIT_MAX=5

# ===========================
# LOGGING & MONITORING
# ===========================
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=true
DETAILED_ERRORS=false

# ===========================
# SECURITY SETTINGS
# ===========================
VERIFY_USER_ON_REQUEST=true
TRUST_PROXY=1

# ===========================
# PRODUCTION SETTINGS
# ===========================
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false
