# TopSmile Application Environment Variables
# Copy this file and customize values for your environment

# ===========================
# FRONTEND CONFIGURATION
# ===========================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_VERSION=1.0.0
REACT_APP_FEATURE_FLAGS=

# ===========================
# BACKEND SERVER CONFIGURATION
# ===========================
NODE_ENV=development
PORT=5000

# ===========================
# DATABASE
# ===========================
DATABASE_URL=mongodb://localhost:27017/topsmile

# ===========================
# AUTHENTICATION & SECURITY
# ===========================
# Generate secure secrets: openssl rand -hex 32
JWT_SECRET=7641fe273ed3d4866c2c4f9da62196f87fd619064c59f67d2ca64263f66aaaa0
JWT_EXPIRES_IN=15m
PATIENT_JWT_SECRET=b4836f3ef0547674cbd89d654c84dc5d0fd9deafeacaac0e5d0487aeac73240e
PATIENT_ACCESS_TOKEN_EXPIRES=24h

# ===========================
# CORS & FRONTEND INTEGRATION
# ===========================
FRONTEND_URL=http://localhost:3000

# ===========================
# EMAIL CONFIGURATION
# ===========================
FROM_EMAIL=noreply@topsmile.com
ADMIN_EMAIL=contato@topsmile.com

# SendGrid (Production)
SENDGRID_API_KEY=your-sendgrid-api-key

# Ethereal Email (Development/Testing)
ETHEREAL_USER=ethereal.user@ethereal.email
ETHEREAL_PASS=ethereal.pass

# ===========================
# SECURITY & PERFORMANCE
# ===========================
VERIFY_USER_ON_REQUEST=false
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=100
CONTACT_RATE_LIMIT_WINDOW_MS=900000
CONTACT_RATE_LIMIT_MAX=5

# ===========================
# LOGGING & MONITORING
# ===========================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
DETAILED_ERRORS=true

# ===========================
# DEVELOPMENT SETTINGS
# ===========================
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false

# ===========================
# TESTING CONFIGURATION
# ===========================
